@model BookManagementSystem.Models.Book
<head>
    <link rel="stylesheet" href="~/css/book.css" />
</head>
<body>
<div class="create-book-container">
    <h2 class="form-title">Create a New Book</h2>

    <form asp-action="Create" method="post" class="create-book-form">
        <div class="form-group">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="validation-error"></span>
        </div>
        <div class="form-group">
            <label for="Author">Author</label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="validation-error"></span>
        </div>
        <div class="form-group">
            <label for="IsBorrowed">Is Borrowed</label>
            <input asp-for="IsBorrowed" type="checkbox" class="form-checkbox" />
            <span asp-validation-for="IsBorrowed" class="validation-error"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-submit">Create</button>
        </div>
    </form>
</div>
</body>